<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="2014"
        android:inputType="numberDecimal"
        android:key="@string/settings_min_year_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_min_year_label" />

    <ListPreference
        android:defaultValue="@string/settings_view_category_default"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_view_category"
        android:key="@string/settings_view_category_key"
        android:title="@string/settings_view_category_label" />

</PreferenceScreen>